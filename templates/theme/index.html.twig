{% extends 'base.html.twig' %}

{% block title %}{{ theme.titre }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ theme.titre }}</h1>
</div>

    <h2>Discussions</h2>

    {% if discussions is empty %}
    <p>Aucune discussion pour ce th√®me.</p>
    {% else %}

        <div class="pagination">
            {% if current_page > 1 %}
                <a href="{{ path('app_theme', {'id': theme.id, 'page': current_page - 1}) }}">Precedent</a>
            {% endif %}

            <span>Page {{ current_page }} sur {{ total_pages }}</span>

            {% if current_page < total_pages %}
                <a href="{{ path('app_theme', {'id': theme.id, 'page': current_page + 1}) }}">Suivant</a>
            {% endif %}
        </div>

        <br>

    <table>
        <thead>
        <tr>
            <th>Titre</th>
            <th>Auteur</th>
            <th>Date discussion</th>
        </tr>
        </thead>
        <tbody>
        {% for discussion in discussions %}
            <tr>
                <td><a href="{{ path('app_discussion', {'id': discussion.id}) }}">{{ discussion.titre }}</a></td>
                <td>
                    {{ discussion.user ? discussion.user.username : 'Anonyme' }}
                </td>
                <td>{{ discussion.createdAt|date('d/m/Y H:i') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endif %}

    <br>

    <div class="pagination">
        {% if current_page > 1 %}
            <a href="{{ path('app_theme', {'id': theme.id, 'page': current_page - 1}) }}">Precedent</a>
        {% endif %}

        <span>Page {{ current_page }} sur {{ total_pages }}</span>

        {% if current_page < total_pages %}
            <a href="{{ path('app_theme', {'id': theme.id, 'page': current_page + 1}) }}">Suivant</a>
        {% endif %}
    </div>
    </div>

    <br><br><br><br><br>

    {% if app.session.get('user')  %}

        <h2>Creation Discussion :</h2>

    {{ form(form) }}

        <br><br><br><br><br><br>

        {% if 'ROLE_MODERATOR' in app.session.get('user')['roles'] %}
            <h2>Moderateur :</h2>
            {% for discussion in discussions %}
                <form action="{{ path('app_theme', {'id': theme.id}) }}?delete={{ discussion.id }}" method="post" onsubmit="return confirm('Ete vous sur de vouloir supprimer cette discussion?')">
                    <button type="submit">Supprimer {{ discussion.titre }}</button>
                </form>
            {% endfor %}
        {% endif %}

    {% endif %}

{% endblock %}
