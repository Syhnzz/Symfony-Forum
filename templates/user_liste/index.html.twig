{% extends 'base.html.twig' %}

{% block title %}{{ 'List Users'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'List Users'|trans }}</h1>

    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>Email</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ user.email }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun utilisateur trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
